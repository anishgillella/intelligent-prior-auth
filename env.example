# OpenRouter Configuration
OPENROUTER_API_KEY=your_key_here
OPENROUTER_MODEL=openai/gpt-4o
# Alternative models:
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# OPENROUTER_MODEL=meta-llama/llama-3.1-70b-instruct

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/develop_health_mvp
REDIS_URL=redis://localhost:6379/0

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Application
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Security
API_KEY=dev_api_key_change_in_production

# Paths
PA_FORMS_OUTPUT_DIR=/tmp/pa_forms
MOCK_DATA_DIR=./mock_data

# LLM Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=30

# Confidence Thresholds
ELIGIBILITY_CONFIDENCE_THRESHOLD=0.8
QUALITY_SCORE_THRESHOLD=0.9

# Observability & Monitoring (Logfire & Langfuse)
LOGFIRE_API_KEY=your_logfire_api_key
LANGFUSE_API_KEY=your_langfuse_secret_key
LANGFUSE_PUBLIC_KEY=your_langfuse_public_key
LANGFUSE_HOST=https://cloud.langfuse.com
ENABLE_MONITORING=true

